MainLayout:
    laps: laps
    Label:
        text: 'STOPWATCH APP'
        bold: True
        color: [0, 1, 0, 1]
        font_size: '28dp'
        size_hint: [None, None]
        texture_size: self.size
        pos_hint: {'center_x':.5, 'top':.99}
    
    Label:
        text: root.stopwatch_txt
        bold: True
        font_size: '45dp'
        size_hint: [None, None]
        texture_size: self.size
        pos_hint: {'center_x':.5, 'top':.85}
    
    BoxLayout:
        id: laps
        orientation: 'vertical'
        size_hint_y: .4 
        pos_hint: {'center_x':.5, 'top':.75}

    Button:
        id: start_btn
        text: 'START'
        size_hint: [0.35, 0.05]
        background_color: [0, 1, 0, 1]
        background_normal: ''
        color: [0, 0, 0, 1]
        pos_hint: {'center_x': .5, 'top': .1}
        on_release: root.start_stopwatch()
